<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shsxt.mybatis.dao.GoodsDao">

    <select id="queryGoodsById" parameterType="int" resultType="goods">
         select id, goods_name 'goodsName' , goods_price 'goodsPrice' , goods_stock 'stock'
            from yg_goods where id = #{id}
    </select>

</mapper>